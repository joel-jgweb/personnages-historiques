// Fonction utilitaire : extraire noms de fichiers depuis l'ancien format (Markdown table) ou depuis liste newline
function extractFilenamesFromField($fieldValue) {
    $result = [];
    if (!$fieldValue) return $result;
    // Si c'est un tableau Markdown (ligne avec [T√©l√©charger](...))
    if (strpos($fieldValue, '|') !== false) {
        $lines = explode("\n", $fieldValue);
        foreach ($lines as $line) {
            if (preg_match('/\(([^)]+)\)/', $line, $m)) {
                $path = $m[1];
                $basename = basename($path);
                if ($basename) $result[] = $basename;
            }
        }
    } else {
        // supposons une liste de noms, un par ligne
        $lines = preg_split('/\r\n|\r|\n/', trim($fieldValue));
        foreach ($lines as $l) {
            $l = trim($l);
            if ($l !== '') $result[] = basename($l);
        }
    }
    return array_values(array_filter(array_map('trim', $result)));
}
